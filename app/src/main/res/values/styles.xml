<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/Gray</item>
        <item name="android:navigationBarColor">@color/LightGray</item>
    </style>

    <style name="AppThemeNew" parent="android:Theme.Material.Light" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">#e6eaea</item>
    </style>

</resources>
